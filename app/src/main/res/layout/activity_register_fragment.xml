<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:layout_gravity="center_horizontal"
tools:context=".RegisterFragment">
    <TextView
        android:id="@+id/txt_r1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="The Initiative of IndiPick\nvisit 'www.indipick.in'\nAn Inititative by Asansol Engineering College students, guided by Career4help"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/txt_r2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="To add or register your product please contact, 'hello@IndiPick.in' with subject line 'ADD_PRODUCT'"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/continuedesign"
        android:textColorHint="#ffffff"
        android:hint="    Register Product   "/>


</LinearLayout>